<Window
    x:Class="Shell.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Title="NetVizor - 设置"
    Height="620"
    Width="470"
    MinHeight="620"
    MinWidth="470"
    MaxHeight="620"
    MaxWidth="470"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">

    <!-- 主容器 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 内容区域 -->
        <Grid Grid.Row="0" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="180" />
            </Grid.ColumnDefinitions>

            <!-- 左侧设置区 -->
            <StackPanel Grid.Column="0">

                <!-- 外观 -->
                <TextBlock Text="外观" FontSize="14" FontWeight="Bold" Margin="0,0,0,12" />
                <Grid Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="32" />
                    </Grid.ColumnDefinitions>

                    <!-- 文字颜色 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="文字颜色" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="TextColorBox" Text="#333333"
                             Margin="0,0,8,0" />
                    <Button Grid.Row="0" Grid.Column="2" x:Name="TextColorButton" Background="#333333"
                            Width="24" Height="24" Click="SelectTextColor_Click" />

                    <!-- 背景颜色 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="背景颜色" VerticalAlignment="Center" />
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="BackgroundColorBox" Text="#F0FFFFFF"
                             Margin="0,0,8,0" />
                    <Button Grid.Row="2" Grid.Column="2" x:Name="BackgroundColorButton" Background="#F0FFFFFF"
                            Width="24" Height="24" Click="SelectBackgroundColor_Click" />

                    <!-- 透明度 -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="透明度" VerticalAlignment="Center" />
                    <Slider Grid.Row="4" Grid.Column="1" x:Name="OpacitySlider" Minimum="10" Maximum="100"
                            Value="94" TickFrequency="10" IsSnapToTickEnabled="True"
                            ValueChanged="OpacitySlider_ValueChanged" Margin="0,0,8,0" />
                    <TextBlock Grid.Row="4" Grid.Column="2" x:Name="OpacityText" Text="94%"
                               TextAlignment="Center" VerticalAlignment="Center" />
                </Grid>

                <!-- 显示 -->
                <TextBlock Text="显示" FontSize="14" FontWeight="Bold" Margin="0,0,0,12" />
                <Grid Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- 速度单位 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="速度单位" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="SpeedUnitComboBox"
                              SelectionChanged="SpeedUnitComboBox_SelectionChanged">
                        <ComboBoxItem Content="自动选择" Tag="Auto" IsSelected="True" />
                        <ComboBoxItem Content="B/s" Tag="Bytes" />
                        <ComboBoxItem Content="KB/s" Tag="KB" />
                        <ComboBoxItem Content="MB/s" Tag="MB" />
                    </ComboBox>

                    <!-- 布局方向 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="布局方向" VerticalAlignment="Center" />
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                        <RadioButton x:Name="VerticalLayoutRadio" Content="纵向" IsChecked="True"
                                     Margin="0,0,20,0" Checked="LayoutDirection_Changed" />
                        <RadioButton x:Name="HorizontalLayoutRadio" Content="横向"
                                     Checked="LayoutDirection_Changed" />
                    </StackPanel>

                    <!-- 显示单位 -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="显示选项" VerticalAlignment="Center" />
                    <StackPanel Grid.Row="4" Grid.Column="1">
                        <CheckBox x:Name="ShowUnitCheckBox" Content="显示单位"
                                  IsChecked="True" Checked="ShowUnitCheckBox_Changed"
                                  Unchecked="ShowUnitCheckBox_Changed" />
                        <CheckBox x:Name="ShowTopListCheckBox" Content="显示网速排行榜" Margin="0,4,0,0"
                                  IsChecked="False" Checked="ShowTopListCheckBox_Changed"
                                  Unchecked="ShowTopListCheckBox_Changed" />
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="排行榜数量:" VerticalAlignment="Center" Margin="0,0,8,0" />
                            <ComboBox x:Name="TopListCountComboBox" Width="80"
                                      SelectionChanged="TopListCountComboBox_SelectionChanged">
                                <ComboBoxItem Content="1" Tag="1" />
                                <ComboBoxItem Content="2" Tag="2" />
                                <ComboBoxItem Content="3" Tag="3" IsSelected="True" />
                                <ComboBoxItem Content="4" Tag="4" />
                                <ComboBoxItem Content="5" Tag="5" />
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- 交互 -->
                <TextBlock Text="交互" FontSize="14" FontWeight="Bold" Margin="0,0,0,12" />
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="双击动作" VerticalAlignment="Center" />
                    <ComboBox Grid.Column="1" x:Name="DoubleClickActionComboBox"
                              SelectionChanged="DoubleClickActionComboBox_SelectionChanged">
                        <ComboBoxItem Content="无动作" Tag="None" IsSelected="True" />
                        <ComboBoxItem Content="流量分析" Tag="TrafficAnalysis" />
                        <ComboBoxItem Content="打开设置" Tag="Settings" />
                    </ComboBox>
                </Grid>

                <!-- 窗口行为 -->
                <TextBlock Text="窗口行为" FontSize="14" FontWeight="Bold" Margin="0,0,0,12" />
                <Grid Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- 始终置顶 -->
                    <CheckBox Grid.Row="0" x:Name="TopmostCheckBox" Content="始终置顶"
                              IsChecked="True" Checked="TopmostCheckBox_Changed"
                              Unchecked="TopmostCheckBox_Changed" />

                    <!-- 锁定窗口位置 -->
                    <CheckBox Grid.Row="2" x:Name="LockPositionCheckBox" Content="锁定窗口位置"
                              IsChecked="False" Checked="LockPositionCheckBox_Changed"
                              Unchecked="LockPositionCheckBox_Changed" />

                    <!-- 启用点击穿透 -->
                    <CheckBox Grid.Row="4" x:Name="ClickThroughCheckBox" Content="启用点击穿透"
                              IsChecked="False" Checked="ClickThroughCheckBox_Changed"
                              Unchecked="ClickThroughCheckBox_Changed" />

                    <!-- 不能超出屏幕 -->
                    <CheckBox Grid.Row="6" x:Name="SnapToScreenCheckBox" Content="不能超出屏幕"
                              IsChecked="False" Checked="SnapToScreenCheckBox_Changed"
                              Unchecked="SnapToScreenCheckBox_Changed" />

                    <!-- 显示详细信息 -->
                    <CheckBox Grid.Row="8" x:Name="ShowDetailedInfoCheckBox" Content="显示详细信息"
                              IsChecked="False" Checked="ShowDetailedInfoCheckBox_Changed"
                              Unchecked="ShowDetailedInfoCheckBox_Changed" />

                    <!-- 重置窗口位置按钮 -->
                    <Button Grid.Row="10" HorizontalAlignment="Left" Content="重置窗口位置"
                            Click="ResetWindowPosition_Click" Padding="12,6" MinWidth="100" />
                </Grid>
            </StackPanel>

            <!-- 右侧预览区 -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="预览" FontSize="14" FontWeight="Bold" Margin="0,0,0,12" />

                <Border HorizontalAlignment="Center" x:Name="PreviewBorder"
                        Background="LightGray" BorderBrush="Gray" BorderThickness="1"
                        Padding="16,12">

                    <StackPanel x:Name="PreviewPanel" Orientation="Horizontal">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="↑" Foreground="Red" FontSize="11"
                                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,6,0" />
                            <TextBlock Grid.Column="1" x:Name="PreviewUploadText" Text="1.25 MB/s"
                                       FontSize="11" FontWeight="Bold"
                                       VerticalAlignment="Center" />
                        </Grid>
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="↓" Foreground="Green" FontSize="11"
                                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,2,0" />
                            <TextBlock Grid.Column="1" x:Name="PreviewDownloadText" Text="15.67 MB/s"
                                       FontSize="11" FontWeight="Bold"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- 底部按钮 -->
        <Border Grid.Row="1" Background="LightGray" Padding="20,12">
            <Grid>
                <Button HorizontalAlignment="Left" Content="恢复默认" Click="RestoreDefaults_Click"
                        Padding="12,6" MinWidth="80" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="应用" Click="Apply_Click" Margin="0,0,8,0"
                            Padding="16,6" MinWidth="60" FontWeight="SemiBold" />
                    <Button Content="关闭" Click="Close_Click"
                            Padding="12,6" MinWidth="60" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>