<Window
    x:Class="Shell.UserControls.TrayMenuWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shell.UserControls"
    mc:Ignorable="d"
    Title="TrayMenu"
    Height="180"
    Width="150"
    Topmost="True"
    ShowInTaskbar="False"
    ResizeMode="NoResize"
    Deactivated="Window_Deactivated"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded">
    <Window.Resources>
        <!-- 更柔和的菜单项样式 -->
        <Style
            x:Key="MenuItemStyle"
            TargetType="Border">
            <Setter
                Property="Padding"
                Value="8,8" />
            <Setter
                Property="Cursor"
                Value="Hand" />
            <Setter
                Property="Background"
                Value="Transparent" />
            <Setter
                Property="CornerRadius"
                Value="6" />
            <Style.Triggers>
                <Trigger
                    Property="IsMouseOver"
                    Value="True">
                    <Setter
                        Property="Background"
                        Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 图标 -->
        <Style
            x:Key="IconStyle"
            TargetType="TextBlock">
            <Setter
                Property="FontFamily"
                Value="Segoe Fluent Icons" />
            <Setter
                Property="FontSize"
                Value="16" />
            <Setter
                Property="Foreground"
                Value="#0063B1" />
            <Setter
                Property="VerticalAlignment"
                Value="Center" />
            <Setter
                Property="Margin"
                Value="0,0,8,0" />
        </Style>

        <!-- 文本 -->
        <Style
            x:Key="TextStyle"
            TargetType="TextBlock">
            <Setter
                Property="FontSize"
                Value="14" />
            <Setter
                Property="Foreground"
                Value="#1F1F1F" />
            <Setter
                Property="FontWeight"
                Value="SemiBold" />
            <Setter
                Property="VerticalAlignment"
                Value="Center" />
        </Style>

        <!-- 分隔线 -->
        <Style
            x:Key="SeparatorStyle"
            TargetType="Rectangle">
            <Setter
                Property="Height"
                Value="1" />
            <Setter
                Property="Fill"
                Value="#DDDDDD" />
            <Setter
                Property="Margin"
                Value="8,6" />
        </Style>
    </Window.Resources>

    <Grid>
        <Border
            CornerRadius="10"
            Background="#FFF"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            Padding="3">
            <Border.Effect>
                <DropShadowEffect
                    ShadowDepth="3"
                    Direction="315"
                    Color="#33000000"
                    Opacity="0.25"
                    BlurRadius="12" />
            </Border.Effect>

            <StackPanel
                Margin="6">
                <!-- 示例：你也可以替换图标字符 -->
                <Border
                    Style="{StaticResource MenuItemStyle}"
                    MouseLeftButtonDown="ShowMainWindow_Click">
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock
                            Text=""
                            Style="{StaticResource IconStyle}" />
                        <TextBlock
                            Text="打开主窗口"
                            Style="{StaticResource TextStyle}" />
                    </StackPanel>
                </Border>

                <Rectangle
                    Style="{StaticResource SeparatorStyle}" />

                <Border
                    Style="{StaticResource MenuItemStyle}"
                    MouseLeftButtonDown="HideToTray_Click">
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock
                            Text=""
                            Style="{StaticResource IconStyle}" />
                        <TextBlock
                            Text="最小化到托盘"
                            Style="{StaticResource TextStyle}" />
                    </StackPanel>
                </Border>

                <Border
                    Style="{StaticResource MenuItemStyle}"
                    MouseLeftButtonDown="About_Click">
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock
                            Text=""
                            Style="{StaticResource IconStyle}" />
                        <TextBlock
                            Text="关于"
                            Style="{StaticResource TextStyle}" />
                    </StackPanel>
                </Border>

                <Rectangle
                    Style="{StaticResource SeparatorStyle}" />

                <Border
                    Style="{StaticResource MenuItemStyle}"
                    MouseLeftButtonDown="ExitApplication_Click">
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock
                            Text=""
                            Style="{StaticResource IconStyle}"
                            Foreground="#D32F2F" />
                        <TextBlock
                            Text="退出程序"
                            Style="{StaticResource TextStyle}"
                            Foreground="#D32F2F" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>

</Window>
