<UserControl x:Class="Shell.UserControls.NetworkMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NetVizor.Views"
             xmlns:converters="clr-namespace:NetVizor.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F0F2F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 网络接口选择 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="选择网络接口:" VerticalAlignment="Center" />
            <ComboBox Grid.Column="1"
                      Name="cmbInterfaces"
                      Margin="5,0"
                      VerticalAlignment="Center"
                      SelectionChanged="cmbInterfaces_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock.Text>
                                    <Binding Path="Name" />
                                </TextBlock.Text>
                            </TextBlock>

                            <TextBlock Grid.Column="1" Foreground="Gray">
                                <TextBlock.Text>
                                    <Binding Path="Description" />
                                </TextBlock.Text>
                            </TextBlock>

                            <TextBlock Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                <Setter Property="Text" Value="[已连接]" />
                                                <Setter Property="Foreground" Value="Green" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                                <Setter Property="Text" Value="[未连接]" />
                                                <Setter Property="Foreground" Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Grid.Column="2"
                    Name="btnRefresh"
                    Content="刷新"
                    Padding="10,5"
                    Click="btnRefresh_Click" />
        </Grid>

        <!-- 网速显示区域 -->
        <Border Grid.Row="2"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="5"
                Background="#F9F9F9">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="实时网速监控"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />

                <!-- 下载速度 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="▼" Foreground="Green" FontWeight="Bold" Margin="0,0,5,0" />
                        <TextBlock Text="下载速度:" FontSize="14" VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               Name="txtDownloadSpeed"
                               Text="0.00 B/s"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="Green"
                               VerticalAlignment="Center" />
                </Grid>

                <!-- 上传速度 -->
                <Grid Grid.Row="3" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="▲" Foreground="Blue" FontWeight="Bold" Margin="0,0,5,0" />
                        <TextBlock Text="上传速度:" FontSize="14" VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               Name="txtUploadSpeed"
                               Text="0.00 B/s"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="Blue"
                               VerticalAlignment="Center" />
                </Grid>

                <!-- 总速度 -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Σ" Foreground="DarkOrange" FontWeight="Bold" FontSize="16" Margin="0,0,5,0" />
                        <TextBlock Text="总速度:" FontSize="14" VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Grid.Column="1"
                               Name="txtTotalSpeed"
                               Text="0.00 B/s"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="DarkOrange"
                               VerticalAlignment="Center" />
                </Grid>

                <!-- 状态信息 -->
                <TextBlock Grid.Row="6"
                           Name="txtStatus"
                           Text="请选择一个网络接口"
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>

</UserControl>
