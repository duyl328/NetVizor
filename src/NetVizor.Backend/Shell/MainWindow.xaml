<Window x:Class="Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetVizor"
        xmlns:views1="clr-namespace:Shell.Views"
        mc:Ignorable="d"
        Title="NetVizor Dashboard" Height="700" Width="1300">
    <Grid>
        <TabControl>
            <TabItem Header="Network Monitor">
                <views1:NetworkMonitorView />
            </TabItem>
            <TabItem Header="Web Panel">
                <views1:WebPanel />
            </TabItem>
        </TabControl>
    </Grid>
</Window>